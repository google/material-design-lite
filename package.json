{
  "name": "material-design-lite",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "start": "web-dev-server --node-resolve --open --watch",
    "copy:tokens": "cp -a third_party/tokens/css/. lib/tokens/",
    "format": "npx prettier --write .",
    "build": "npm-run-all build:*",
    "build:system": "npx postcss lib/*.css --base lib --dir dist",
    "build:tokens:components": "npx postcss lib/tokens/**/*.css --base lib --dir dist",
    "build:tokens": "npx postcss lib/**/*.css --base lib --dir dist",
    "build:components": "npx postcss lib/**/**/*.css --base lib --dir dist",
    "build:mdl": "npx postcss lib/styles.css --output dist/material-design-lite.css --use=postcss-import",
    "build:mdl-min": "npx postcss lib/styles.css --output dist/material-design-lite.min.css --use=postcss-import --use=cssnano",
    "dev": "npx postcss --watch lib/styles.css --output dist/material-design-lite.css --use=postcss-import",
    "test": "wtr \"test/**/*.test.html\" --node-resolve --coverage --playwright --browsers chromium firefox webkit",
    "test:watch": "wtr \"test/**/*.test.html\" --node-resolve --playwright --browsers chromium firefox webkit --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rodydavis/material-design-lite.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rodydavis/material-design-lite/issues"
  },
  "homepage": "https://github.com/rodydavis/material-design-lite#readme",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@material/web": "^0.1.0-alpha.0",
    "@open-wc/testing": "^3.1.6",
    "@types/node": "^18.7.17",
    "@web/dev-server": "^0.1.34",
    "@web/test-runner": "^0.14.0",
    "@web/test-runner-playwright": "^0.8.10",
    "cssnano": "^5.1.13",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-apply": "^0.12.0",
    "postcss-cli": "^10.0.0",
    "postcss-color-hct": "^0.0.2",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.8.1",
    "stylefmt": "^6.0.3",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "lit": "^2.3.1"
  }
}
