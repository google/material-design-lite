---
import Article from "./Article.astro";

const props = Astro.props;
const { frontmatter } = props;
const { codepen, link, title } = frontmatter;
const imageUrl = `https://img.shields.io/badge/docs-material.io-black.svg?style=flat-square&logo=data:image/png;base64,`;
---

<Article {...props}>
  {
    link && (
      <a href={link} target="_blank" rel="noopener noreferrer">
        <img alt="View on Material.io" src={imageUrl} />
      </a>
    )
  }
  <slot />
  {
    codepen && (
      <div>
        <h2>Playground</h2>

        <p
          id="codepen"
          class="codepen"
          data-height="500"
          data-theme-id="light"
          data-default-tab="html,result"
          data-slug-hash={codepen}
          data-editable="true"
          data-user="rodydavis"
        >
          <span>
            See the Pen{" "}
            <a href={`https://codepen.io/rodydavis/pen/${codepen}`}>{title}</a>{" "}
            by Rody Davis (<a href="https://codepen.io/rodydavis">@rodydavis</a>
            ) on <a href="https://codepen.io">CodePen</a>.
          </span>
        </p>
        <script async src="https://cpwebassets.codepen.io/assets/embed/ei.js" />
      </div>
    )
  }
</Article>

<style>
  .codepen {
    width: 100%;
    height: 500px;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid;
    margin: 1em 0;
    padding: 1em;
  }
</style>
